root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.rs]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[{justfile,**/justfile}]
trim_trailing_whitespace = false

[{Makefile,**/Makefile}]
indent_style = tab

[*.snap]
trim_trailing_whitespace = false

[{Dockerfile,**/Dockerfile}]
trim_trailing_whitespace = false
